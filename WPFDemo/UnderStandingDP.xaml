<Window x:Class="WPFDemo.UnderStandingDP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="UnderStandingDP" Height="300" Width="300" SizeToContent="WidthAndHeight"> 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Name="txt" Text="点击下面的按钮来改变字体，fontSize是一个依赖属性"></TextBlock>
        <Button Name="btn1" Grid.Row="1">BUTTON</Button>
        <Button Name="btn2" Grid.Row="2">BUTTON</Button>
        <Button Name="btn3" Grid.Row="3">BUTTON</Button>
        <Button Name="btn4" Grid.Row="4">BUTTON</Button>

        <StackPanel Orientation="Horizontal" Grid.Row="5" HorizontalAlignment="Center">

            <Button Name="btnWindowSize" Margin="5" Click="btnWindowSize_Click">改变window字体大小</Button>
            <Button Name="btnButtonSize"  Margin="5" Click="btnButtonSize_Click">改变button字体大小</Button>
        </StackPanel>
    </Grid>
</Window>
